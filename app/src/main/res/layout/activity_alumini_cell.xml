<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_alumini_cell"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender"
    tools:context="com.samkeet.smartreva.AlumniCell.AlumniCellActivity">



    <android.support.design.widget.AppBarLayout
        android:id="@+id/apppppp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorAccent"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/back_button"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="5dp"
                    android:onClick="BackButton"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alumni Cell"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:layout_toRightOf="@+id/back_button"
                    android:paddingLeft="15dp"
                    android:layout_centerHorizontal="true"
                    />


            </RelativeLayout>


        </android.support.v7.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent" />


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_below="@id/apppppp">

        <WebView
            android:layout_width="match_parent"
            android:id="@+id/webview"
            android:layout_height="wrap_content">

        </WebView>

        <Button
            android:layout_width="match_parent"
            android:padding="15dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Upload Details"
            android:onClick="UploadDetails"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
